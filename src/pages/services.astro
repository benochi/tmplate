---
import Layout from "../layouts/Layout.astro";
import Section from "../components/blocks/Section.astro";
import FeatureGrid from "../components/blocks/FeatureGrid.astro";
import PrimaryActionSection from "../components/blocks/PrimaryActionSection.astro";
import SeoHead from "../components/blocks/SeoHead.astro";
---

<Layout>
  <fragment slot="head">
    <SeoHead
      title="Services â€¢ Your Business"
      description="Our core services delivered fast with SEO-friendly, accessible builds."
      canonicalPath="/services"
      siteName="Your Business"
      imagePath="/og/services.jpg"
      breadcrumbs={[
        { name: "Home", path: "/" },
        { name: "Services", path: "/services" },
      ]}
      jsonLd={{
        "@context": "https://schema.org",
        "@type": "Service",
        name: "Website design and local SEO setup",
        provider: {
          "@type": "Organization",
          name: "Your Business",
        },
      }}
    />
  </fragment>

  <main id="main">
    <Section eyebrow="What we do" title="Services">
      <FeatureGrid
        items={[
          {
            title: "Website builds",
            body: "Fast static sites with modern design and clean SEO.",
          },
          {
            title: "Brand refresh",
            body: "Color, type, and layout tuned for conversions.",
          },
          {
            title: "Content updates",
            body: "Add pages, change copy, swap images with ease.",
          },
        ]}
      />
    </Section>

    <PrimaryActionSection
      title="Ready to start?"
      text="Get a same-day quote for your website."
      buttonText="Contact us"
      buttonHref="/contact"
    />
  </main>
</Layout>
