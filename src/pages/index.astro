---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Section from "../components/blocks/Section.astro";
import Hero from "../components/blocks/Hero.astro";
import FeatureGrid from "../components/blocks/FeatureGrid.astro";
import PrimaryActionSection from "../components/blocks/PrimaryActionSection.astro";
import FAQ from "../components/blocks/FAQ.astro";
import Stats from "../components/blocks/Stats.astro";
import ImageBanner from "../components/blocks/ImageBanner.astro";
import Carousel from "../components/blocks/Carousel.astro";
import Testimonials from "../components/blocks/Testimonials.astro";
import SeoHead from "../components/blocks/SeoHead.astro";

import { featureItems } from "../data/featureGrid";
import { faqItems } from "../data/faq";
import { statsItems } from "../data/stats";
import { portfolioSlides } from "../data/carousel";
import { testimonials } from "../data/testimonials";
---

<Layout>
  <fragment slot="head">
    <SeoHead
      title="Home â€¢ Acme"
      description="Acme builds fast, SEO-first SMB sites."
      canonicalPath="/"
      siteName="Acme"
      imagePath="/og/home.jpg"
      locale="en_US"
      twitterHandle="@acme"
      breadcrumbs={[{ name: "Home", path: "/" }]}
      jsonLd={{
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: "Acme",
        url: "https://your-domain.example",
        potentialAction: {
          "@type": "SearchAction",
          target: "https://your-domain.example/search?q={query}",
          "query-input": "required name=query",
        },
      }}
    />
  </fragment>

  <main id="main">
    <Section eyebrow="Benefits" title="Why choose us">
      <p class="text-lg text-slate-700">
        Lightning-fast, accessible, and easy to edit.
      </p>
    </Section>

    <Hero
      headline="Win more local customers"
      subhead="Clean, fast, SEO-first websites with clear calls to action."
      buttonText="Get a free quote"
      buttonHref="/contact"
      showMedia={true}
    >
      <fragment slot="media">
        <img
          src="/images/hero1.jpg"
          alt="Storefront"
          class="h-full w-full object-cover"
        />
      </fragment>
    </Hero>

    <FeatureGrid items={featureItems} />

    <PrimaryActionSection
      title="Book a free consult"
      text="Pick a time that works for you."
      buttonText="Schedule now"
      buttonHref="/schedule"
    />

    <FAQ items={faqItems} />

    <Testimonials
      title="What customers are saying"
      items={testimonials}
      backgroundClass="bg-[--surface-muted]"
      columns={{ base: 1, sm: 2, lg: 3 }}
      mode="paged"
      pageSize={3}
    />

    <Stats items={statsItems} />

    <ImageBanner
      imageUrl="/images/sample-banner.jpg"
      alt="Happy customer at storefront"
      title="Stand out in local search"
      text="Clean, fast sites with clear calls to action."
      buttonText="Get a free quote"
      buttonHref="/contact"
      align="left"
    />

    <Carousel title="Recent work" slides={portfolioSlides} autoplayMs={5000} />
  </main>
</Layout>
