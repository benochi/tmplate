---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Section from "../components/blocks/Section.astro";
import Hero from "../components/blocks/Hero.astro";
import FeatureGrid from "../components/blocks/FeatureGrid.astro";
import PrimaryActionSection from "../components/blocks/PrimaryActionSection.astro";
import FAQ from "../components/blocks/FAQ.astro";
---

<Layout>
  <fragment slot="head">
    <title>Home • Acme</title>
    <meta name="description" content="Acme builds fast, SEO-first SMB sites." />
    <link rel="canonical" href="/" />
  </fragment>

  <main id="main" class="mx-auto max-w-5xl p-8">
    <Section eyebrow="Benefits" title="Why choose us">
      <p class="text-lg text-slate-700">
        Lightning-fast, accessible, and easy to edit.
      </p>
    </Section>
    <Hero
      headline="Home page hero!"
      subhead="Clean, fast, SEO-first sites."
      buttonText="Get a free quote"
      buttonHref="/contact"
    />
    <FeatureGrid
      items={[
        {
          title: "Lightning-fast",
          body: "Static output with minimal JavaScript.",
        },
        {
          title: "SEO-first",
          body: "Semantic HTML, clean headings, customizable meta per page.",
        },
        {
          title: "Accessible",
          body: "Keyboard navigation, visible focus, good color contrast.",
        },
      ]}
    />
    <PrimaryActionSection
      title="Book a free consult"
      text="Pick a time that works for you."
      buttonText="Schedule now"
      buttonHref="/schedule"
    />
    <FAQ
      items={[
        {
          question: "How fast can you launch?",
          answer: "Most sites launch in 3–7 days.",
        },
        {
          question: "Do you handle SEO?",
          answer: "Yes, titles, descriptions, headings, clean HTML.",
        },
        {
          question: "Can I update content later?",
          answer: "Yes, we can add and edit pages anytime.",
        },
      ]}
    />
  </main>
</Layout>
