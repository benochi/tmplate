---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Section from "../components/blocks/Section.astro";
import Hero from "../components/blocks/Hero.astro";
import FeatureGrid from "../components/blocks/FeatureGrid.astro";
import PrimaryActionSection from "../components/blocks/PrimaryActionSection.astro";
import FAQ from "../components/blocks/FAQ.astro";
import Stats from "../components/blocks/Stats.astro";
import ImageBanner from "../components/blocks/ImageBanner.astro";
import Carousel from "../components/blocks/Carousel.astro";

const portfolioSlides = [
  {
    src: "/images/site1.jpg",
    alt: "Restaurant homepage hero",
    caption: "Café Azul",
  },
  {
    src: "/images/site2.jpg",
    alt: "Contractor services page",
    caption: "ProBuild Services",
  },
  {
    src: "/images/site3.jpg",
    alt: "Dental clinic landing page",
    caption: "Bright Dental",
  },
];
---

<Layout>
  <fragment slot="head">
    <title>Home • Acme</title>
    <meta name="description" content="Acme builds fast, SEO-first SMB sites." />
    <link rel="canonical" href="/" />
  </fragment>

  <main id="main" class="mx-auto max-w-5xl p-8">
    <Section eyebrow="Benefits" title="Why choose us">
      <p class="text-lg text-slate-700">
        Lightning-fast, accessible, and easy to edit.
      </p>
    </Section>
    <Hero showMedia={true}>
      <fragment slot="media">
        <img
          src="/images/hero1.jpg"
          alt="Storefront"
          class="h-full w-full object-cover"
        />
      </fragment>
    </Hero>
    <FeatureGrid
      items={[
        {
          title: "Lightning-fast",
          body: "Static output with minimal JavaScript.",
        },
        {
          title: "SEO-first",
          body: "Semantic HTML, clean headings, customizable meta per page.",
        },
        {
          title: "Accessible",
          body: "Keyboard navigation, visible focus, good color contrast.",
        },
      ]}
    />
    <PrimaryActionSection
      title="Book a free consult"
      text="Pick a time that works for you."
      buttonText="Schedule now"
      buttonHref="/schedule"
    />
    <FAQ
      items={[
        {
          question: "How fast can you launch?",
          answer: "Most sites launch in 3–7 days.",
        },
        {
          question: "Do you handle SEO?",
          answer: "Yes, titles, descriptions, headings, clean HTML.",
        },
        {
          question: "Can I update content later?",
          answer: "Yes, we can add and edit pages anytime.",
        },
      ]}
    />
    <Stats
      items={[
        {
          value: 3,
          label: "Avg. days to launch",
          sublabel: "From signed quote",
        },
        { value: "95%", label: "Mobile Lighthouse score", suffix: "" },
        {
          value: 50,
          label: "Local leads / yr",
          sublabel: "Typical SMB result",
          suffix: "+",
        },
        { value: "$0", label: "Ongoing CMS fees" },
      ]}
    />
    <ImageBanner
      imageUrl="/images/sample-banner.jpg"
      alt="Happy customer at storefront"
      title="Stand out in local search"
      text="Clean, fast sites with clear calls to action."
      buttonText="Get a free quote"
      buttonHref="/contact"
      align="left"
    />
    <Carousel title="Recent work" slides={portfolioSlides} autoplayMs={5000} />
  </main>
</Layout>
