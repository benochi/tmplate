---
import Layout from "../layouts/Layout.astro";
import Section from "../components/blocks/Section.astro";
---

<Layout>
  <fragment slot="head">
    <title>Contact â€¢ Your Business</title>
    <meta name="description" content="Get a same-day website quote." />
    <link rel="canonical" href="/contact" />
  </fragment>

  <main id="main">
    <Section title="Contact">
      <!-- Card-like inner container -->
      <div
        class="mx-auto w-full max-w-lg rounded-2xl border border-slate-200 bg-white p-6 sm:p-8"
      >
        <form
          action="https://formspree.io/f/your-id"
          method="POST"
          class="grid gap-6"
        >
          <label class="grid gap-2" for="name">
            <span class="text-sm">Name</span>
            <input
              id="name"
              name="name"
              required
              class="h-11 px-3 rounded-2xl border border-slate-300"
            />
          </label>

          <label class="grid gap-2" for="email">
            <span class="text-sm">Email</span>
            <input
              id="email"
              type="email"
              name="email"
              required
              class="h-11 px-3 rounded-2xl border border-slate-300"
            />
          </label>

          <label class="grid gap-2" for="message">
            <span class="text-sm">Message</span>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="px-3 py-3 rounded-2xl border border-slate-300"></textarea>
          </label>

          <button
            class="h-12 px-6 rounded-2xl bg-[--color-brand] text-white font-semibold hover:opacity-90"
          >
            Send
          </button>
        </form>
      </div>
    </Section>
  </main>
</Layout>
