---
import Layout from "../layouts/Layout.astro";
import Section from "../components/blocks/Section.astro";
import PricingTable from "../components/blocks/PricingTable.astro";
import SeoHead from "../components/blocks/SeoHead.astro";
import { products } from "../data/pricing";
---

<Layout>
  <fragment slot="head">
    <SeoHead
      title="Pricing â€¢ Your Business"
      description="Transparent website packages with fast delivery and clean SEO."
      canonicalPath="/pricing"
      breadcrumbs={[
        { name: "Home", path: "/" },
        { name: "Pricing", path: "/pricing" },
      ]}
      jsonLd={{
        "@context": "https://schema.org",
        "@type": "OfferCatalog",
        name: "Website Packages",
        url: "https://your-domain.example/pricing",
      }}
    />
  </fragment>

  <main id="main">
    <Section title="Pricing">
      <p class="text-slate-700">Pick a plan, or ask for a custom quote.</p>
    </Section>
    <PricingTable products={products} />
  </main>
</Layout>
