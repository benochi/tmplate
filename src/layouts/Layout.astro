---
import "../styles/global.css";
import Header from "../components/blocks/Header.astro";
import Footer from "../components/blocks/Footer.astro";
const { lang = "en", bodyClass = "" } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <slot name="head" />
  </head>
  <body class={`min-h-screen text-slate-800 ${bodyClass}`}>
    <Header />
    <a href="#main" class="sr-only focus:not-sr-only p-2">Skip to content</a>
    <slot />
    <Footer
      brand="Your Business"
      links={[
        { href: "/privacy", label: "Privacy" },
        { href: "/terms", label: "Terms" },
      ]}
      socials={[
        {
          href: "https://github.com/yourbiz",
          icon: "simple-icons:github",
          label: "GitHub",
        },
        {
          href: "https://instagram.com/yourbiz",
          icon: "simple-icons:instagram",
          label: "Instagram",
        },
        { href: "https://x.com/yourbiz", icon: "simple-icons:x", label: "X" },
      ]}
    />
  </body>
</html>
