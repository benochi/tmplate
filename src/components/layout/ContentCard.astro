---
// Uniform card wrapper (forms, sections, feature blocks)
type Props = { maxWidth?: string; class?: string };
const { maxWidth = "max-w-lg", class: cls = "" } = Astro.props as Props;
---

<div
  class={`mx-auto w-full ${maxWidth} rounded-2xl border border-slate-200 bg-white p-6 sm:p-8 ${cls}`}
>
  <slot />
</div>
