---
import PageContainer from "../layout/PageContainer.astro";

type Props = {
  id?: string;
  title?: string;
  eyebrow?: string;
  backgroundClass?: string;
  padded?: boolean;
  titleAlign?: "left" | "center";
};

const {
  id,
  title,
  eyebrow,
  backgroundClass = "",
  padded = true,
  titleAlign = "left",
} = Astro.props as Props;

const headingClass = `mt-2 text-3xl sm:text-4xl font-bold ${titleAlign === "center" ? "text-center" : ""}`;
---

<section id={id} class={backgroundClass}>
  <PageContainer padded={padded}>
    {
      eyebrow && (
        <p
          class={`text-sm uppercase tracking-wide text-slate-500 ${titleAlign === "center" ? "text-center" : ""}`}
        >
          {eyebrow}
        </p>
      )
    }
    {title && <h2 class={headingClass}>{title}</h2>}
    <div class={`mt-6 ${titleAlign === "center" ? "text-center" : ""}`}>
      <slot />
    </div>
  </PageContainer>
</section>
