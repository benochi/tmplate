---
import PageContainer from "../layout/PageContainer.astro";

type Props = {
  title?: string;
  text?: string;
  buttonText?: string;
  buttonHref?: string;
  backgroundClass?: string;
};

const {
  title = "Ready to start?",
  text = "Call or message us and weâ€™ll get you a same-day quote.",
  buttonText = "Contact us",
  buttonHref = "/contact",
  backgroundClass = "bg-slate-50",
} = Astro.props as Props;
---

<section class={backgroundClass} aria-labelledby="primary-action-heading">
  <PageContainer>
    <h2 id="primary-action-heading" class="text-3xl sm:text-4xl font-bold">
      {title}
    </h2>
    <p class="mt-4 text-lg text-slate-700">{text}</p>
    <a
      href={buttonHref}
      class="inline-block mt-6 focus:outline-none focus:ring-4 focus:ring-blue-300 rounded-2xl"
    >
      <button
        class="h-12 px-6 rounded-2xl bg-[--color-brand] text-white font-semibold hover:opacity-90"
      >
        {buttonText}
      </button>
    </a>
  </PageContainer>
</section>
