---
type NavItem = { href: string; label: string };
type Props = {
  brand?: string;
  nav?: NavItem[];
};

const {
  brand = "Your Business",
  nav = [
    { href: "/", label: "Home" },
    { href: "/services", label: "Services" },
    { href: "/about", label: "About" },
    { href: "/contact", label: "Contact" },
  ],
} = Astro.props as Props;
---

<header class="border-b border-slate-200">
  <div
    class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between"
  >
    <a href="/" class="text-lg font-bold tracking-tight">{brand}</a>

    <!-- Desktop nav -->
    <nav class="hidden md:flex gap-6" aria-label="Main">
      {
        nav.map((item) => (
          <a href={item.href} class="text-slate-700 hover:text-slate-900">
            {item.label}
          </a>
        ))
      }
    </nav>

    <!-- Mobile menu (no JS) -->
    <details class="md:hidden">
      <summary
        class="list-none cursor-pointer rounded-lg px-3 py-2 border border-slate-300"
      >
        Menu
      </summary>
      <nav
        class="mt-2 rounded-xl border border-slate-200 p-2 grid gap-1 bg-white"
        aria-label="Main"
      >
        {
          nav.map((item) => (
            <a
              href={item.href}
              class="block rounded-lg px-3 py-2 hover:bg-slate-50"
            >
              {item.label}
            </a>
          ))
        }
      </nav>
    </details>
  </div>
</header>
