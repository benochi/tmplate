---
type Feature = { title: string; body: string };
type Columns = { base?: number; sm?: number; lg?: number };
type Props = { items?: Feature[]; columns?: Columns };

const { items = [], columns = { base: 1, sm: 2, lg: 3 } } =
  Astro.props as Props;

const colClass = `grid gap-6 grid-cols-${columns.base} sm:grid-cols-${columns.sm} lg:grid-cols-${columns.lg}`;
---

<section aria-labelledby="features-heading">
  <h2 id="features-heading" class="sr-only">Key features</h2>
  <ul class={colClass}>
    {
      items.map((f) => (
        <li class="rounded-2xl border border-slate-200 p-6 bg-white">
          <h3 class="text-lg font-semibold">{f.title}</h3>
          <p class="mt-2 text-slate-600">{f.body}</p>
        </li>
      ))
    }
  </ul>
</section>
