---
import PageContainer from "../layout/PageContainer.astro";

type Testimonial = { quote: string; author: string; role?: string };
type Props = {
  title?: string;
  items?: Testimonial[];
  backgroundClass?: string;
};

const {
  title = "What clients say",
  items = [],
  backgroundClass = "bg-slate-50",
} = Astro.props as Props;
---

<section class={backgroundClass} aria-labelledby="testimonials-heading">
  <PageContainer>
    <h2 id="testimonials-heading" class="text-3xl sm:text-4xl font-bold">
      {title}
    </h2>
    <ul class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        items.map((t) => (
          <li class="rounded-2xl border border-slate-200 bg-white p-6">
            <blockquote class="text-slate-800 leading-relaxed">
              “{t.quote}”
            </blockquote>
            <div class="mt-4 text-sm text-slate-600">
              <span class="font-semibold text-slate-800">{t.author}</span>
              {t.role && <span class="ml-1">• {t.role}</span>}
            </div>
          </li>
        ))
      }
    </ul>
  </PageContainer>
</section>
