---
import PageContainer from "../layout/PageContainer.astro";

type FAQ = { question: string; answer: string };
type Props = {
  title?: string;
  items?: FAQ[];
  backgroundClass?: string;
};

const {
  title = "Frequently asked questions",
  items = [],
  backgroundClass = "bg-slate-50",
} = Astro.props as Props;
---

<section class={backgroundClass} aria-labelledby="faq-heading">
  <PageContainer>
    <h2 id="faq-heading" class="text-3xl sm:text-4xl font-bold">{title}</h2>
    <div class="mt-8 grid gap-4">
      {
        items.map((f) => (
          <details class="rounded-2xl border border-slate-200 bg-white p-4">
            <summary class="cursor-pointer list-none">
              <span class="text-base font-semibold">{f.question}</span>
            </summary>
            <div class="mt-3 text-slate-700">{f.answer}</div>
          </details>
        ))
      }
    </div>
  </PageContainer>
</section>
